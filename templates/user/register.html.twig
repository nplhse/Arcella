{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ "title.registration"|trans({}, "forms") }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>{{ "title.registration"|trans({}, "forms") }}</h1>

                {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first) }}
                {{ form_row(form.plainPassword.second) }}

                <button type="submit" class="btn btn-primary" formnovalidate>{{ "button.register"|trans({}, "forms") }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
